{
  "framework": "nextjs",
  "buildCommand": "next build",
  "devCommand": "next dev --port $PORT",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/auto-invoices",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/daily-summaries",
      "schedule": "0 8 * * *"
    }
  ]
}
